{
  "name": "dev-configs",
  "version": "0.0.3",
  "description": "Common configurations for building web projects",
  "author": "Curtis Dulmage",
  "license": "ISC",
  "packageManager": "yarn@3.1.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "keywords": [
    "web",
    "development",
    "configuration"
  ],
  "homepage": "https://github.com/beefchimi/dev-configs#readme",
  "bugs": {
    "url": "https://github.com/beefchimi/dev-configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beefchimi/dev-configs.git"
  },
  "scripts": {
    "lint": "yarn workspaces foreach -vpiR run lint",
    "test": "jest",
    "build": "yarn workspaces foreach -vtR run build",
    "reboot": "./scripts/reboot-yarn-v3.sh",
    "report": "yarn changeset",
    "prepublish": "yarn workspaces foreach -vtR run prepublish",
    "release": "changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.19.0"
  },
  "devDependencies": {
    "@shopify/babel-preset": "^24.1.5",
    "@shopify/eslint-plugin": "^41.0.1",
    "eslint": "^8.6.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
